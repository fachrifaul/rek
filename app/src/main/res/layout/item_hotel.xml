<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_penumpang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="?android:selectableItemBackground"
    android:padding="@dimen/activity_horizontal_margin"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_hotel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_flyto" />

        <RatingBar
            android:id="@+id/rb_rate_hotel"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_image_hotel"
            android:layout_toRightOf="@+id/iv_image_hotel"
            android:max="5"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1" />

        <TextView
            android:id="@+id/tv_name_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rb_rate_hotel"
            android:layout_toEndOf="@+id/iv_image_hotel"
            android:layout_toRightOf="@+id/iv_image_hotel"
            android:text="Hotel Aston" />

        <TextView
            android:id="@+id/tv_price_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_hotel"
            android:layout_toEndOf="@+id/iv_image_hotel"
            android:layout_toRightOf="@+id/iv_image_hotel"
            android:text="150.000/malam" />

        <ImageView
            android:id="@+id/iv_promo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_promo" />

        <TextView
            android:id="@+id/tv_promo"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right"
            android:text="Disc%\n20%"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>