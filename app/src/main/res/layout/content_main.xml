<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <!--tools:context="com.reka.tour.MainActivity"-->
    <!--tools:showIn="@layout/app_bar_main">-->

    <RelativeLayout
        android:id="@+id/pager_atas"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/layout_navmenu"
        android:layout_alignParentTop="true">

        <com.reka.tour.views.pagerindicator.AutoScrollViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.reka.tour.views.pagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_runningtext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#85000000"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Diskon Eksklusif Tiket Pesawat. Khusus pelanggan Info Promo, nikmati diskon untuk tiket pesawat dengan 17+ maskapai rute domestik dan internasional."
        android:textColor="@android:color/white" />

    <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/layout_review"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/txt_runningtext">-->

        <!--<EditText-->
            <!--android:id="@+id/input_promo_code"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:drawableLeft="@drawable/ic_flight"-->
            <!--android:gravity="left|center"-->
            <!--android:hint="Harta"-->
            <!--android:text="12.000.000" />-->
    <!--</android.support.design.widget.TextInputLayout>-->

    <RelativeLayout
        android:id="@+id/layout_navmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_reservation"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_flight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_flight" />

        <ImageView
            android:id="@+id/nav_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/nav_flight"
            android:padding="10dp"
            android:src="@drawable/ic_train" />

        <ImageView
            android:id="@+id/nav_hotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nav_train"
            android:padding="10dp"
            android:src="@drawable/ic_hotel" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_reservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/pick_what"
        android:textColor="@android:color/white" />
</RelativeLayout>
